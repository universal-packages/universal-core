{
  "name": "@universal-packages/core",
  "version": "0.0.7",
  "description": "Agnostic and conventional node executions wrap",
  "author": "David De Anda <david@universal-packages.com> (https://github.com/universal-packages)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git://git@github.com/universal-packages/universal-core.git",
  "bin": {
    "ucore": "./bin/ucore.js",
    "@universal-packages/core": "./bin/ucore.js"
  },
  "scripts": {
    "build": "tsc --p tsconfig.dis.json",
    "test": "jest --watch",
    "test:full": "jest --coverage --verbose"
  },
  "dependencies": {
    "@universal-packages/config-loader": "^1.5.1",
    "@universal-packages/logger": "^1.7.0",
    "@universal-packages/module-loader": "^1.0.0",
    "@universal-packages/plugin-config-loader": "^1.1.1",
    "@universal-packages/template-populator": "^1.0.0",
    "@universal-packages/time-measurer": "^1.3.0",
    "change-case": "^4.1.2",
    "chokidar": "^3.5.3",
    "validate": "^5.2.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/jest": "^28.1.0",
    "@types/node": "^17.0.39",
    "jest": "^28.1.0",
    "jest-circus": "^28.1.0",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.3"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/tests/.*\\.test\\.ts?)$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/tmp"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "trailingComma": "none"
  }
}
