{
  "name": "@universal-packages/core",
  "version": "1.26.2",
  "description": "Agnostic and conventional node executions wrap",
  "author": "David De Anda <david@universal-packages.com> (https://github.com/universal-packages)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:universal-packages/universal-core.git",
  "bin": {
    "ucore": "./bin/ucore.js",
    "@universal-packages/core": "./bin/ucore.js"
  },
  "scripts": {
    "build": "tsc --p tsconfig.dis.json",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:clear": "jest --clearCache",
    "format": "prettier --write \"./{src,tests}/**/*.{ts,tsx,js,jsx,json}\"",
    "update-universal-dependencies": "umaintenance update-universal-dependencies"
  },
  "dependencies": {
    "@babel/register": "^7.22.15",
    "@universal-packages/config-loader": "^1.12.7",
    "@universal-packages/logger": "^1.14.2",
    "@universal-packages/logger-terminal-presenter": "^1.1.8",
    "@universal-packages/module-loader": "^1.0.9",
    "@universal-packages/plugin-config-loader": "^1.6.9",
    "@universal-packages/sub-process": "^1.15.7",
    "@universal-packages/template-populator": "^1.0.16",
    "@universal-packages/terminal-presenter": "^1.14.0",
    "@universal-packages/time-measurer": "^1.4.9",
    "ajv": "^8.12.0",
    "change-case": "^4.1.2",
    "chokidar": "^3.5.3",
    "ts-node": "^10.9.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^18.11.9",
    "@universal-packages/logger-jest": "^1.0.3",
    "@universal-packages/maintenance": "^1.5.10",
    "@universal-packages/sub-process-jest": "^1.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "setupFilesAfterEnv": [
      "@universal-packages/logger-jest",
      "@universal-packages/sub-process-jest",
      "<rootDir>/tests/setup.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "trailingComma": "none",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "classProperties",
      "decorators-legacy"
    ]
  }
}
