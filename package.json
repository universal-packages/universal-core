{
  "name": "@universal-packages/core",
  "version": "1.16.36",
  "description": "Agnostic and conventional node executions wrap",
  "author": "David De Anda <david@universal-packages.com> (https://github.com/universal-packages)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:universal-packages/universal-core.git",
  "bin": {
    "ucore": "./bin/ucore.js",
    "@universal-packages/core": "./bin/ucore.js"
  },
  "scripts": {
    "build": "tsc --p tsconfig.dis.json",
    "test": "jest --watch",
    "test:full": "jest --coverage --verbose",
    "test:clear": "jest --clearCache",
    "format": "prettier --write \"./{src,tests}/**/*.{ts,tsx,js,jsx,json}\"",
    "update-dependents": "umaintenance update-dependents"
  },
  "dependencies": {
    "@babel/register": "^7.22.15",
    "@universal-packages/config-loader": "^1.12.3",
    "@universal-packages/logger": "^1.10.4",
    "@universal-packages/module-loader": "^1.0.5",
    "@universal-packages/plugin-config-loader": "^1.6.2",
    "@universal-packages/template-populator": "^1.0.12",
    "@universal-packages/time-measurer": "^1.4.9",
    "change-case": "^4.1.2",
    "chokidar": "^3.5.3",
    "ts-node": "^10.9.1",
    "validate": "^5.2.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.11.9",
    "@universal-packages/maintenance": "^1.2.5",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "trailingComma": "none",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "classProperties",
      "decorators-legacy"
    ]
  }
}
