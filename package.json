{
  "name": "@universal-packages/core",
  "version": "1.14.0",
  "description": "Agnostic and conventional node executions wrap",
  "author": "David De Anda <david@universal-packages.com> (https://github.com/universal-packages)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:universal-packages/universal-core.git",
  "bin": {
    "ucore": "./bin/ucore.js",
    "@universal-packages/core": "./bin/ucore.js"
  },
  "scripts": {
    "build": "tsc --p tsconfig.dis.json",
    "test": "jest --watch",
    "test:full": "jest --coverage --verbose",
    "test:clear": "jest --clearCache",
    "format": "prettier --write \"./{src,tests}/**/*.{ts,tsx,js,jsx,json}\"",
    "update-dependents": "umaintenance update-dependents"
  },
  "dependencies": {
    "@babel/register": "^7.22.15",
    "@universal-packages/config-loader": "^1.9.0",
    "@universal-packages/logger": "^1.10.0",
    "@universal-packages/module-loader": "^1.0.1",
    "@universal-packages/plugin-config-loader": "^1.4.0",
    "@universal-packages/template-populator": "^1.0.1",
    "@universal-packages/time-measurer": "^1.4.9",
    "change-case": "^4.1.2",
    "chokidar": "^3.5.3",
    "ts-node": "^10.8.2",
    "validate": "^5.2.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.4",
    "@types/node": "^17.0.39",
    "@universal-packages/maintenance": "^1.2.2",
    "jest": "^29.6.4",
    "jest-circus": "^29.6.4",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.1",
    "typescript": "^4.7.3"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/tests/.*\\.test\\.ts?)$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/tmp"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "trailingComma": "none",
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "classProperties",
      "decorators-legacy"
    ]
  }
}
